@model AllCustomersModel
@{
    ViewData["Title"] = "All Customers";
}
<h2>All Customers</h2>
<h3>Ordered in @Model.OrderedDirection.ToString().ToLower() direction</h3>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                BirthDate
            </th>
            <th>
                Is Young Driver
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model.Customers)
        {
            <tr>
                <td>
                    @customer.Name
                </td>
                <td>
                    @customer.BirthDate.ToShortDateString()
                </td>
                <td>
                    @(customer.IsYoungDribver ? "YES" : "No")
                </td>
            </tr>
        }
    </tbody>
</table>
