@model IEnumerable<SaleListModel>
@{
    ViewData["Title"] = "All Sales";
}
<h2>@ViewData["Title"]</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td>
                Customer
            </td>
            <td>
                Discount
            </td>
            <td>
                Price
            </td>
            <td>
                Discounted Price
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var sale in Model)
        {
            <tr>
                <td>
                   @sale.CustomerName 
                </td>
                <td>
                    @(sale.Discount + (sale.IsYoungDriver ? 0.05 : 0))
                </td>
                <td>
                    @sale.Price 
                </td>
                <td>
                   @sale.DiscountedPrice
                </td>
            </tr>
        }
    </tbody>
</table>